<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OttieniDisponibilita"
    android:background="@drawable/parchimetro">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:editable="false"
        android:gravity="center"
        android:text="SmartParkingApp"
        android:background="#663F51B5"
        android:textColor="#FFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/codiceAreaDisp"
        android:layout_width="393dp"
        android:layout_height="21dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:background="#663F51B5"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Codice Area"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnGetDisponibilita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_states"
        android:text="Posti Disponibili"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/codiceAreaDisp"
        tools:layout_editor_absoluteX="10dp" />

</android.support.constraint.ConstraintLayout>